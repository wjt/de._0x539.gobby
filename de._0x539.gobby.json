                "--with-distro=none",
                "--enable-gobject",
                "--with-xml=expat",
                "--disable-libdaemon",
                "--disable-libevent",
                "--disable-core-docs",
                "--disable-manpages",
                "--disable-mono",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-qt5",
